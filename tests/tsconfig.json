{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "types": ["jest", "node"],
    "baseUrl": "../",
    "paths": {
      "@/*": ["backend/src/*"]
    }
  },
  "include": [
    "**/*",
    "../backend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
